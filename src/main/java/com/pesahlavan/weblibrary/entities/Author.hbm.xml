<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.pesahlavan.weblibrary.entities.Author" table="author" schema="spring-library">
        <id name="id" column="id"/>
        <property name="fio" column="fio"/>
        <property name="birthday" column="birthday"/>
        <set name="booksById" inverse="true">
            <key>
                <column name="author_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.pesahlavan.weblibrary.entities.Book"/>
        </set>
        <set name="genresById" inverse="true">
            <key>
                <column name="parent" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.pesahlavan.weblibrary.entities.Genre"/>
        </set>
    </class>
</hibernate-mapping>