<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.pesahlavan.weblibrary.entities.Genre" table="genre" schema="spring-library">
        <id name="id" column="id"/>
        <property name="name" column="name"/>
        <property name="parent" column="parent"/>
        <many-to-one name="authorByParent" class="com.pesahlavan.weblibrary.entities.Author">
            <column name="parent" not-null="true"/>
        </many-to-one>
        <set name="booksById" inverse="true">
            <key>
                <column name="genre_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.pesahlavan.weblibrary.entities.Book"/>
        </set>
    </class>
</hibernate-mapping>